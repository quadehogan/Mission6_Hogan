@model List<Movie>

@{
    ViewData["Title"] = "Movie Collection";
}

<div class="container my-4">
    <h1 class="mb-4">Movie Collection</h1>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>On Plex</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Title</td>
                <td>@m.Category?.CategoryName</td>
                <td>@m.Year</td>
                <td>@m.Director</td>
                <td>@m.Rating</td>
                <td>@(m.Edited ? "Yes" : "No")</td>
                <td>@m.LentTo</td>
                <td>@(m.CopiedToPlex ? "Yes" : "No")</td>
                <td>@m.Notes</td>
                <td>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@m.MovieId" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@m.MovieId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
