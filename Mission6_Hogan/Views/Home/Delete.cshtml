@model Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container my-5">
    <div class="card border-warning">
        <div class="card-body">
            <h1 class="card-title">Delete @Model.Title directed by @Model.Director?</h1>
            <p class="text-muted">This action cannot be undone.</p>

            <form asp-controller="Home" asp-action="Delete" method="post">
                <input type="hidden" asp-for="MovieId"/>
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-controller="Home" asp-action="ViewMovies" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>
